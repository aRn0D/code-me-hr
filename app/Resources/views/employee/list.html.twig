{% extends 'base.html.twig' %}


{% block content %}
    <h1 class="ui dividing header">Employee</h1>
    <a href="{{ path('employee_hire') }}" class="ui primary button">
        New employee
    </a>
    <table class="ui celled table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary Scale</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
        <tr>
            <td>{{ employee.name }}</td>
            <td>{{ employee.position }}</td>
            <td>{{ employee.salaryScale }}</td>
            <td>
                <a href="{{ path('employee_promote', {'id': employee.id }) }}" class="ui button">Promote</a>
                <a href="{{ path('employee_fire', {'id': employee.id }) }}" class="ui red button">Fire</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="4">
                <div class="ui right floated pagination menu">
                    <a class="icon item">
                        <i class="left chevron icon"></i>
                    </a>
                    <a class="item">1</a>
                    <a class="item">2</a>
                    <a class="item">3</a>
                    <a class="item">4</a>
                    <a class="icon item">
                        <i class="right chevron icon"></i>
                    </a>
                </div>
            </th>
        </tr>
        </tfoot>
    </table>
{% endblock %}